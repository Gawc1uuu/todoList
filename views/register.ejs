<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row my-5">
    <div class="col-md-4 offset-md-4 shadow py-4 px-4 loginForm">
      <form
        action="/register"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Enter an email"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="Username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-success">Register</button>
        </div>
      </form>
      <form action="/login">
        <p class="mt-3 mb-0">Already registered?</p>
        <div class="d-grid gap-2">
          <button class="btn btn-success">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>
